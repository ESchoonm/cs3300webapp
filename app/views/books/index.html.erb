<p id="notice"><%= notice %></p>

<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Genre</th>
      <!--<th>String</th>-->
      <th>Date released</th>
      <th>Book in series</th>
      <!--<th>Integer</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.genre %></td>
        <!--<td><%= book.string %></td>-->
        <td><%= book.date_released %></td>
        <td><%= book.book_in_series %></td>
        <!--<td><%= book.integer %></td>-->
        <td><%= link_to 'Show', book, class:"btn btn-outline-* mybutton"  %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_book_path(book) , class:"btn btn-outline-* mybutton" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-* mybutton"  %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path , class:"btn btn-outline-* mybutton" %>
