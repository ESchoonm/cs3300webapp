<p id="notice"><%= notice %></p>

<h1>Books</h1>
<img src="cs3300webapp/app/assets/images/books.jpg" alt="stack of books">

<section class="myborder">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Date released</th>
      <th>Book in series</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.genre %></td>
        <td><%= book.date_released %></td>
        <td><%= book.book_in_series %></td>
        <td><%= link_to 'Show', book %>
        <td><a class="btn btn-primary" href=@book:id role="button">Link</a>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
<br>

<%= link_to 'New Book', new_book_path %>
