<p id="notice"><%= notice %></p>

<h1>Books</h1>
<img src="../../assets/images/books.jpg" alt="stack of books">

<section class="myborder">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Genre</th>
      <th>Date released</th>
      <th>Book in series</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.genre %></td>
        <td><%= book.date_released %></td>
        <td><%= book.book_in_series %></td>
        <td><a class="btn btn-outline-primary" href="<%= book_path(book) %>" role="button">Show</a></td>
        <td><a class="btn btn-outline-primary" href="<%= edit_book_path(book) %>" role="button">Edit</a></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
<br>

<a class="btn btn-outline-primary" href="<%= new_book_path %>" role="button">New Book</a>
